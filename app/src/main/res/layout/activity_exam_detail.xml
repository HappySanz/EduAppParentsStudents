<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/appColor"
            android:minHeight="?attr/actionBarSize"/>

        <ImageView
            android:id="@+id/back_res"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:minHeight="?attr/actionBarSize"
            android:paddingLeft="15dp"
            android:src="@drawable/ic_arrow_back_white_48dp" />

        <TextView
            android:id="@+id/tvtitletext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:minHeight="?attr/actionBarSize"
            android:paddingLeft="10dp"
            android:text="Exam Detail"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/actionbarTextSize" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/black">

        <TextView
            android:id="@+id/da"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@color/appColor"
            android:textSize="20dp"
            android:text="DATE"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/ti"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@color/appColor"
            android:textSize="20dp"
            android:text="TIME"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/da"
            android:layout_alignTop="@+id/da"
            android:layout_marginLeft="2dp"/>

        <TextView
            android:id="@+id/sub"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:background="@color/appColor"
            android:layout_toRightOf="@+id/ti"
            android:layout_alignTop="@+id/da"
            android:text="SUBJECT"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginLeft="2dp"/>

        <TextView
            android:id="@+id/mark"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:background="@color/appColor"
            android:layout_toRightOf="@+id/sub"
            android:layout_alignTop="@+id/da"
            android:text="MARKS"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"/>

        <ListView
            android:id="@+id/listView_events"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/da"
            android:dividerHeight="0dp"
            android:paddingBottom="2dp">

        </ListView>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listView_events"
        android:text="Total"
        android:textSize="20dp"
        android:layout_gravity="right"
        android:layout_marginRight="100dp"
        android:textColor="@color/appColor"/>


</LinearLayout>